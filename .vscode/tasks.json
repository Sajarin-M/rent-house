{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Prisma Generate",
      "detail": "generate prisma models",
      "command": "bun run prisma-generate",
      "options": {
        "cwd": "${cwd}/apps/server"
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Prisma Studio",
      "detail": "start prisma studio",
      "command": "bun run prisma-studio",
      "options": {
        "cwd": "${cwd}/apps/server"
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Prisma Generate Migration",
      "detail": "create database migration",
      "command": "bun run prisma-migration --name ${input:migrationName}",
      "options": {
        "cwd": "${cwd}/apps/server"
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Prisma Push",
      "detail": "push changes to database",
      "command": "bun run prisma-push ${input:pushOptions}",
      "options": {
        "cwd": "${cwd}/apps/server"
      },
      "problemMatcher": []
    },
    {
      "type": "bun",
      "script": "install",
      "problemMatcher": [],
      "label": "Install Deps",
      "detail": "bun install"
    },
    {
      "type": "bun",
      "script": "clean",
      "problemMatcher": [],
      "label": "Clean Modules",
      "detail": "turbo run clean"
    },
    {
      "label": "Setup Repo",
      "detail": "setup repo",
      "dependsOn": ["Install Deps", "Prisma Generate"],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Setup Repo",
      "detail": "setup repo",
      "command": "bun run setup",
      "problemMatcher": []
    },
    {
      "label": "Clean & Setup",
      "detail": "clean modules & resetup",
      "dependsOn": ["Clean Modules", "Setup Repo"],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "Dev Server All",
      "detail": "start bot dev server",
      "dependsOn": ["Dev Server Server", "Dev Server Web"],
      "dependsOrder": "parallel",
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Dev Server Web",
      "isBackground": true,
      "command": "bun dev",
      "options": {
        "cwd": "${cwd}/apps/web"
      },
      "detail": "start web dev server",
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Dev Server Server",
      "isBackground": true,
      "command": "bun dev",
      "options": {
        "cwd": "${cwd}/apps/server"
      },
      "detail": "start server dev server",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "migrationName",
      "description": "Migration Name",
      "default": "init",
      "type": "promptString"
    },
    {
      "id": "pushOptions",
      "description": "Options",
      "default": "--accept-data-loss",
      "type": "promptString"
    }
  ]
}
