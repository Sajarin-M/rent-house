{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "topo": {
      "dependsOn": ["^topo"]
    },
    "lint": { "dependsOn": ["topo"] },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": { "cache": false, "persistent": true }
  }
}
